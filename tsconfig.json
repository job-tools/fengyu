{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        // 此处配置提示
        "baseUrl": "./", // 配置了baseUrl  才可以配置paths
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@/less": [
                "src/less"
            ],
            "@/icons": [
                "src/icons"
            ],
            "@/images": [
                "src/images"
            ],
            "@/components": [
                "src/components"
            ],
            "@/views": [
                "src/views"
            ],
            "@/router": [
                "src/router"
            ],
            "@/store": [
                "src/store"
            ],
            "@/utils": [
                "src/utils"
            ],
            "@/publicFunctions": [
                "src/publicFunctions"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}